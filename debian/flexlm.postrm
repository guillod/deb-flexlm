#! /bin/sh
# postinst script for flexlm
#
# see: dh_installdeb(1)

set -e

if [ "$1" = "purge" ] || [ "$1" = "disappear" ] ; then

    # Lock flexlm account.
	usermod -L -e 1 flexlm || true
	
    # Purge config directory
	rm -Rf /etc/flexlm
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
